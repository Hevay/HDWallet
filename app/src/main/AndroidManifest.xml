<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vx.hdwallet">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".bitcoinWallet.BitcoinWalletActivity" />
        <activity android:name=".ethereumWallet.EthereumWalletActivity" />
        <activity android:name=".ethereumWallet.KeyStoreActivity" />
        <activity android:name=".ethereumWallet.MnemonicActivity" />
        <activity android:name=".ethereumWallet.PrivateKeyActivity"></activity>
    </application>

</manifest>